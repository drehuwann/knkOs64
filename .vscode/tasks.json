{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'./build.sh'"
                ]
            }
        },
        {
            "label": "objdump",
            "type": "shell",
            "linux": {
                "command": "pushd ${workspaceFolder}/build/CMakeFiles/kernel.dir/src; objdump -Dj .text --visualize-jumps=color --disassembler-color=on -M intel ${fileBasenameNoExtension}.c.o | less -R; popd",
                "problemMatcher": "$gcc"
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "./build.sh;bochs -qf .bochsrc "
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "'pushd output; rm -rf *; cd ../build; rm -rf *; popd'"
                ]
            },
            "problemMatcher": []
        }
    ]
}
